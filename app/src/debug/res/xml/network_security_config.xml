<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Debug only: Allow cleartext (HTTP) for local development -->
    <domain-config cleartextTrafficPermitted="true">
        <!-- Android Emulator localhost -->
        <domain includeSubdomains="true">10.0.2.2</domain>
        <!-- Physical device localhost -->
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
        <!-- Local network for physical device testing -->
        <domain includeSubdomains="true">192.168.29.175</domain>
    </domain-config>
    
    <!-- Base config for debug: allow cleartext for development -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
</network-security-config>
